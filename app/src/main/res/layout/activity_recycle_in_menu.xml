    <LinearLayout
        android:id="@+id/linear_layout_recycle_in_menu__search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:layout_weight="1">
        <Button
            android:id="@+id/ButtonSearchRecycleInMenu"
            style="?android:attr/borderlessButtonStyle"
            android:text="@string/button_search_recycle_in_menu"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="#95fc46"
            android:textColor="#011397"
            android:onClick="executeSearch"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </LinearLayout>

</LinearLayout>