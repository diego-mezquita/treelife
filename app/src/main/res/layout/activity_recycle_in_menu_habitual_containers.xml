    <LinearLayout
        android:id="@+id/linear_layout_recycle_in_menu__tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#688A08">

        <Button
            android:id="@+id/ButtonSearchByAddressRecycleInMenu"
            style="?android:attr/borderlessButtonStyle"
            android:text="@string/button_search_by_address_recycle_in_menu"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|left"
            android:background="#95fc46"
            android:textColor="#011397"
            android:onClick="displaySearchByAddress"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="1dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/ButtonHabitualContainersRecycleInMenu"
            style="?android:attr/borderlessButtonStyle"
            android:text="@string/button_habitual_container_recycle_in_menu"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|center"
            android:background="#CEF6F5"
            android:textColor="#011397"
            android:onClick="displayHabitualContainers"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="1dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/ButtonCreateContainerRecycleInMenu"
            style="?android:attr/borderlessButtonStyle"
            android:text="@string/button_create_container_recycle_in_menu"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|right"
            android:background="#95fc46"
            android:textColor="#011397"
            android:onClick="displayCreateContainers"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:textSize="20dp" />
    </LinearLayout>
