<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Interfaces.UserActivity"
    android:background="#ffffff">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/backgroundColor">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/activity_user__header__avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                     />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/activity_user__header__name"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:text="Tokoro Tenn"
                    android:textSize="22sp"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:editable="true"/>

                <TextView
                    android:id="@+id/activity_user__header__email"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="tokoro.tenn@nu.com"
                    android:textAlignment="center"
                    android:editable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/activity_user__header__recycle_in_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/recycle_in_icon"
                    android:onClick="goToRecycleIn"/>

            </LinearLayout>

        </LinearLayout>

